<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SubjectActivity"
    android:background="@color/backgroundMainColor"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/adView_subject_bottom"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:context=".activity.SubjectActivity"
            android:background="@color/backgroundMainColor"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/subject_textview_bg">

                <Toolbar
                    android:id="@+id/userName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:title="@string/avatar"
                    android:layout_weight="1"
                    />

<!--                <ImageView-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="match_parent"-->
<!--                    android:layout_marginStart="20dp"-->
<!--                    android:background="@drawable/profile_image_bg"-->
<!--                    tools:ignore="ImageContrastCheck" />-->

                <TextView
                    android:id="@+id/logout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="20sp"
                    android:text="@string/logout"
                   />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_java"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/java"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:background="@drawable/subject_textview_bg"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


                <TextView
                    android:id="@+id/tv_Cpp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/subject_textview_bg"
                    android:text="@string/c"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPython"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/python"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:background="@drawable/subject_textview_bg"
                    android:layout_weight=".5"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    tools:ignore="NestedWeights" />




                <TextView
                    android:id="@+id/tvJavaScript"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/subject_textview_bg"
                    android:text="@string/javascript"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:padding="20dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


            </LinearLayout>
            <com.google.android.gms.ads.AdView
                android:id="@+id/adViewSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:adSize="LARGE_BANNER"
                app:adUnitId="ca-app-pub-2248293766990577/2224608003"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView"
                app:layout_constraintVertical_bias="0.136" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/tvDbms"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_weight=".5"
                    android:background="@drawable/subject_textview_bg"
                    android:gravity="center"
                    android:text="@string/dbms"
                    android:padding="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="25sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvComputerNet"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/subject_textview_bg"
                    android:text="@string/computer_networking"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="6dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvNodejs"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/node_js"
                    android:gravity="center"
                    android:textSize="25sp"
                    android:layout_margin="5dp"
                    android:background="@drawable/subject_textview_bg"
                    android:layout_weight=".5"
                    android:padding="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


                <TextView
                    android:id="@+id/tvReact"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight=".5"
                    android:background="@drawable/subject_textview_bg"
                    android:text="@string/react"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:layout_margin="5dp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"/>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


    <com.google.android.gms.ads.AdView
        android:id="@+id/adView_subject_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:adSize="BANNER"
        android:layout_marginTop="5dp"
        app:adUnitId="ca-app-pub-2248293766990577/2276578896"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>